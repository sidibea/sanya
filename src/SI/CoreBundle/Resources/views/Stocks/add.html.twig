{% extends "SICoreBundle::layout.html.twig" %}
{% block title %} Stocks {% endblock %}
{% block breadcumb %}
    <section class="content-header">
        <h1>
            Stocks
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
{% endblock %}

{% block content %}
    <!-- Left col -->
    <section class="col-lg-12">
        <!-- Chat box -->
        {{ form_start(form) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}
        <div class="box box-success">

            <div class="box-body chat" id="chat-box">

                <div class="row">
                    <div class="col-xs-12">
                        {{ form_label(form.products, "Produits ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.products) }}

                            {{ form_widget(form.products, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
                    </div>
                    <div class="col-xs-4">
                        {{ form_label(form.qty, "Quantite ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.qty) }}
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                            {{ form_widget(form.qty, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
                        </div>
                    </div>

                </div>


            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-success" value="Sauvegarder">
                <input type="button" class="btn" value="Annuler" onclick="window.location.href='{{ path('si_core_stockin') }}';">

            </div>

        </div>
        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
    </section>

{% endblock %}