{% extends "SICoreBundle::layout.html.twig" %}
{% block title %} Produits & Services {% endblock %}
{% block breadcumb %}
    <section class="content-header">
        <h1>
            Produits & Services
            <small>Ici, vous avez la possibilité d'enregistrer les produits et services fréquemment facturés.</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
{% endblock %}

{% block content %}
<!-- Left col -->
<section class="col-lg-12">
    <!-- Chat box -->
    {{ form_start(form) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}
    <div class="box box-success">

        <div class="box-body chat" id="chat-box">
            <div class="form-group control-group">
                {{ form_label(form.code, "Code article ") }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.code) }}
                {{ form_widget(form.code, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
            </div>
            <div class="form-group control-group">
                {{ form_label(form.description, "Description") }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
            </div>

            <div class="form-group control-group">
                {{ form_label(form.prixDeVente, "Prix de vente") }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.prixDeVente) }}
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-money "></i>
                    </div>
                    {# Génération de l'input. #}
                    {{ form_widget(form.prixDeVente, {'attr': {'class': 'form-control ', 'placeholder' : '',  'data-inputmask' : "'alias': 'dd/mm/yyyy'" , 'data-mask':'' }}) }}
                </div>
            </div>

            <div class="form-group control-group">
                {{ form_label(form.noteInterne, "Note interne ") }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.noteInterne) }}
                {{ form_widget(form.noteInterne, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
            </div>
        </div>
        <div class="box-footer">
            <input type="submit" class="btn btn-success" value="Sauvegarder">
            <input type="button" class="btn" value="Annuler" onclick="window.location.href='{{ path('si_core_product') }}';">

        </div>

    </div>
    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</section>

{% endblock %}