{% extends "SICoreBundle::layout.html.twig" %}
{% block title %} Fournisseurs {% endblock %}
{% block breadcumb %}
    <section class="content-header">
        <h1>
            Fournisseurs
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
{% endblock %}

{% block content %}
    <!-- Left col -->
    <section class="col-lg-12">

        <div class="box box-success"><br>
            <div class="box-header ui-sortable-handle" style="cursor: move;">

                <div class="box-tools pull-right" data-toggle="tooltip" title="" data-original-title="Créer Fournisseurs">
                    <a href="{{ path('si_core_suppliers_new') }}" class="btn btn-app">
                        <i class="fa fa-plus"></i> Créer Fournisseurs
                    </a>
                </div>
            </div> <br>

            <div class="box-body chat" id="chat-box"><br>
                <br><table id="example2" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Telephone</th>
                        <th>Mobile </th>
                        <th>Ville</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, val in suppliers %}
                        <tr>
                            <td>{{ val.name }} {% if val.societe != '' %} ({{ val.societe }}) {% endif %}</td>
                            <td>{{ val.email }}</td>
                            <td >{{ val.telephone }}</td>
                            <td  > {{ val.mobile }}</td>
                            <td>{{ val.ville }} </td>
                            <td>
                                <div class="btn-group bg-blue">

                                    <a style="font-size: 14px;" href="{{ path('si_core_customers_edit', {'id': val.id}) }}"  title="" class="btn btn-mini" data-original-title="Modifier"><i class="fa fa-pencil"></i></a>

                                    <a style="font-size: 14px;" class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)"><span class="hidden-phone">Plus</span> <span class="caret"></span></a>
                                    <ul style="font-size: 14px;" class="dropdown-menu right">
                                        <li>
                                            <!--<a href="/landlord/#properties/80786/view" data-toggle="tooltip" data-placement="left" title="Afficher la fiche produit" name="Afficher" class=""><i class="icon-search"></i> Fiche produit</a>-->
                                            <a href="" onclick=" return confirm('Attention ! en supprimant ce bus, toutes les informations liées a ce bus seront supprimées ');" title="" ><i class="icon-remove"></i> Supprimer</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>

    </section>

{% endblock %}

{% block script %}
    <script type="text/javascript">
        $(function () {
            $('#example2').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": true,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
        });
    </script>
{% endblock %}