{% extends "SICoreBundle::layout.html.twig" %}
{% block title %} Facture de ventes VT{{ invoices.id }}{% endblock %}
{% block breadcumb %}
    <section class="content-header">
        <h1>
            Facture de ventes VT{{ invoices.id }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
{% endblock %}

{% block content %}

    <!-- Left col -->
    <section class="col-lg-12">
        <!-- Chat box -->
        {{ form_start(form) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}
        <div class="box box-success">

            <div class="box-body chat" id="chat-box">
                <div class="row">
                    <div class="col-xs-12">
                        {{ form_label(form.montant, "Montant payé ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.montant) }}
                        {{ form_widget(form.montant, {'attr': {'class': 'form-control montant', 'placeholder' : '' }}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4">
                        {{ form_label(form.dateAdd, "Date ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.dateAdd) }}
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            {{ form_widget(form.dateAdd, {'attr': {'class': 'form-control datepicker', 'placeholder' : '' }}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        {{ form_label(form.tresorerie, "Trésorerie de destination ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.tresorerie) }}
                            {{ form_widget(form.tresorerie, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2">
                        {{ form_label(form.isCheque, "Coché si chèque ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.isCheque) }}
                        {{ form_widget(form.isCheque, {'attr': {'class': '', 'placeholder' : '' }}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        {{ form_label(form.refCheque, "Numéro Réf/Chq ") }}

                        {# Affichage des erreurs pour ce champ précis. #}
                        {{ form_errors(form.refCheque) }}
                        {{ form_widget(form.refCheque, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
                    </div>
                </div>






            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-success" value="Sauvegarder">
                <input type="button" class="btn" value="Annuler" onclick="window.location.href='{{ path('si_core_customers') }}';">

            </div>

        </div>
        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
    </section>

{% endblock %}

{% block script %}
    <script type="text/javascript">
        "use strict";

        $(function () {

            //Activate the iCheck Plugin
            $('input[type="radio"]').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            });

            $(".datepicker").datepicker({
                minDate:0,
                format: 'dd/mm/yyyy'
            });

            $.getScript('http://timschlechter.github.io/bootstrap-tagsinput/dist/bootstrap-tagsinput.js',function(){

            });


        });
    </script>

    <script type="text/javascript">

        $(function () {
            jQuery(document).ready(function() {
                console.log("jQuery est prêt !");



            });
        });
    </script>

{% endblock %}